@model Compilify.Web.Models.PostViewModel

<div id="content">
    <div id="sidebar">
        <div class="inner">
            <div class="sidebar-form">
                <h4>References</h4>
                <ul class="references"></ul>
            </div>

            <div class="sidebar-bottom">
                <a href="https://appharbor.com">
                    <img src="~/assets/img/appharbor.png" alt="Hosted by AppHarbor" />
                </a>
            </div>
        </div>
    </div>

    <div id="ide">
        <div id="top-bar" class="container-fluid">
            <div id="new-document" class="new-tab-btn">
                <a href="#" class="tab new-tab" title="New document">
                    <i class="icon-plus-sign"></i>
                </a>
            </div>
            <ul class="nav nav-tabs"></ul>
        </div>

        <div class="workspace">
            <div class="columns clearfix">
                <div class="column left">
                    <div class="editor tab-content"></div>
                </div>
                <div class="column right">
                    <div class="results">
                        <pre>Press "Run" to execute your code.</pre>
                    </div>
                </div>
            </div>
        </div>

        <div id="statusbar">
            <div class="inner">
                <span>Ready</span>
            </div>
        </div>
    </div>
</div>

<script id="tab-template" type="text/html">
    @Html.Partial("_DocumentTab")
</script>

<script id="reference-template" type="text/html">
    @Html.Partial("_ReferenceListItem")
</script>

@section PageScripts {
    <script>
        $(function() {
            Compilify.init($('#content'), @Html.Raw(Json.Encode(Model)));
        });
    </script>
}