@using System.Globalization
@model Compilify.Web.Models.PageContentViewModel

@{ var hasErrors = Model.Errors != null && Model.Errors.Any(); }

<div id="define">
    <div class="page-header">
        <h1>
            code 
            <small>
                <a class="js-save" href="#">save</a> 
                @*<a class="js-execute" href="#">run</a> *@
            </small>
        </h1>
    </div>
    <textarea class="js-editor">@Model.Content.Code</textarea>
</div>
<div id="errors">
    <div class="page-header">
        <h1>errors</h1>
    </div>
    <ul>
        @if (!hasErrors)
        {
            <li>Build completed successfully.</li>
        }
        else
        {
            foreach (var error in Model.Errors)
            {
                <li>@error.Info.GetMessage(CultureInfo.InvariantCulture)</li>
            }
        }
    </ul>
</div>
<div id="results">
    <div class="page-header">
        <h1>results</h1>
    </div>
    <p></p>
</div>
