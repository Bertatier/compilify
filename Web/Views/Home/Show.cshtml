@using System.Globalization
@model Compilify.Web.Models.PostViewModel

@{ var hasErrors = Model.Errors != null && Model.Errors.Any(); }

<div id="define">
    <div class="page-header">
        <h1>
            code 
            <small>
                <a class="js-save" href="#">save</a> 
                <a class="js-execute" href="#">run</a>
            </small>
        </h1>
    </div>

    <div class="editor">
        <textarea>@Model.Post.Content</textarea>
    </div>

    <div class="messages">
        <ul>
            @if (!hasErrors)
            {
                <li class="message success">Build completed successfully.</li>
            }
            else
            {
                foreach (var error in Model.Errors)
                {
                    <li class="message error">@error</li>
                }
            }
        </ul>
    </div>
</div>

<div id="results">
    <div class="page-header">
        <h1>results</h1>
    </div>
    <p></p>
</div>
